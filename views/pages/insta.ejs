<!DOCTYPE html>
<html lang="en">
	<% include ../partials/head %>
	<body class="container"> <!-- .container is main centered wrapper -->
		<% include ../partials/header %>

	<!-- BODY
	–––––––––––––––––––––––––––––––––––––––––––––––––– -->
		<main class="row">
			<h1>PICS</h1>

			<div>
			<% pics.forEach(function(pic) { %>
				<ul>
					<li><span>idx:</span><%= pic.idx %></li>
					<li><span>code:</span><%= pic.code %></li>
					<li><span>link:</span><a href="<%= pic.link %>"><%= pic.link %></a></li>
					<li><span>low_resolution:</span><%= pic.low_resolution %></li>
					<li><span>standard_resolution:</span><%= pic.standard_resolution %></li>
					<li><span>thumbnail:</span><img src="<%= pic.thumbnail.url %>" alt="thumbnail <%= pic.code %>"></li>
					<li><span>like_count:</span><%= pic.like_count %></li>
					<li><span>created_time:</span><%= pic.created_time %></li>
					<li><span>text:</span><%= pic.text %></li>
					<li><span>comment_count:</span><%= pic.comment_count %></li>
					<li>
						<ul>
						<% pic.data.forEach(function(comm) { %>
							<!-- <li><img src="<%= comm.from.profile_picture %>" alt="profile_picture"></li> -->
							<li><%= comm.from.username %></li>
							<li><%= comm.text %></li>
						<% }); %>
						</ul>
					</li>
				</ul>
			<% }); %>
			</div>

		</main>
		<% include ../partials/footer %>
	</body>

<!-- SCRIPTS
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
	<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
	<script type="text/javascript" src="/scripts.min.js"></script>

<!-- End Document
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
</html>